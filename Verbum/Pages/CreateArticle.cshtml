@page
@model Verbum.Pages.CreateArticle

@{
    ViewData["Title"] = "Create Article";
}

<h1>Create a New Article</h1>

<form method="post">
    <div class="form-group">
        <label for="ArticleName">Article Name</label>
        <input type="text" class="form-control" id="ArticleName" name="ArticleName" required />
    </div>
    <div class="form-group">
        <label for="MarkdownContent">Markdown Content</label>
        <textarea class="form-control" id="MarkdownContent" name="MarkdownContent" rows="10" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>